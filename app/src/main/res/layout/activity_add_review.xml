<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linear_layout_back">


    <EditText
        android:id="@+id/review"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/ratingBar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Add review"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reviewee_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/review"
        android:layout_marginTop="50dp"
        android:text="@string/add_button" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_type"
        android:layout_marginTop="15dp"
        android:isIndicator="false"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/user_type"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewee_name"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/title"
        android:layout_toRightOf="@+id/title" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewee_name"
        android:layout_marginTop="15dp"
        android:layout_alignEnd="@+id/submit_button"
        android:layout_alignRight="@+id/submit_button"
        android:text="Were they a requester or provider?"
        android:textColor="@android:color/black" />


</RelativeLayout>