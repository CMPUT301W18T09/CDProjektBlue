<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_layout_back"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <StackView
            android:id="@+id/ImageStack"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@color/colorTheme" />


        <EditText
            android:id="@+id/details_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#fcfcf9"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Looking for a babysitter"
            android:textAlignment="center"
            android:textColor="#fcfcf9" />

        <EditText
            android:id="@+id/details_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_task_title"
            android:textColor="#fcfcf9"
            android:backgroundTint="#fcfcf9"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="14 1510 Parkland Drive"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/details_task_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_location"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:backgroundTint="#fcfcf9"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Requested"
                android:textAlignment="center"
                android:textColor="#fcfcf9" />

            <EditText
                android:id="@+id/details_lowest_bid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_location"
                android:layout_toRightOf="@+id/details_task_status"
                android:layout_weight="1"
                android:backgroundTint="#fcfcf9"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Lowest Bid: $42"
                android:textAlignment="center"
                android:textColor="#fcfcf9" />
        </LinearLayout>

        <EditText
            android:id="@+id/usernameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:textColor="#fcfcf9"
            android:ems="10"
            android:backgroundTint="#fcfcf9"
            android:textAlignment="center"
            android:maxLines="1"
            android:inputType="text"
            android:text="Name" />

        <EditText
            android:id="@+id/details_task_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="top|left"
            android:inputType="text|textMultiLine|textCapSentences"
            android:maxLength="300"
            android:text="I'm going out of town and will not have to be in touch and I not have to go back and I have a great time and place and we will have a good time for you and I have a good time for you and I'mâ€‹I have to go to the gym and then I will be there in a few minutes late but I don't know if you want to go to"
            android:textColor="#fcfcf9" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">

        <Button
            android:id="@+id/btnBid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/new_button_background"
            android:text="Bid"
            android:textColor="@color/colorTheme" />
    </LinearLayout>

</RelativeLayout>