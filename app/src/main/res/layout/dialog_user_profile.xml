<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="cmput301w18t09.orbid.UserProfileDialog"
    android:background="@drawable/linear_layout_back"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/username_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:text="@string/username"
        android:backgroundTint="#fcfcf9"
        android:ems="10"
        android:textColor="#fcfcf9"/>

    <TextView
        android:id="@+id/fullnameview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_title"
        android:gravity="center"
        android:backgroundTint="#fcfcf9"
        android:ems="10"
        android:textColor="#fcfcf9"
        android:textSize="24sp"
        android:text="name"/>

    <TextView
        android:id="@+id/emailview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fullnameview"
        android:gravity="center"
        android:backgroundTint="#fcfcf9"
        android:ems="10"
        android:textColor="#fcfcf9"
        android:textSize="24sp"
        android:text="@string/email"/>

    <TextView
        android:id="@+id/phoneview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/emailview"
        android:layout_below="@+id/emailview"
        android:gravity="center"
        android:backgroundTint="#fcfcf9"
        android:ems="10"
        android:text="@string/phone_number"
        android:textColor="#fcfcf9"
        android:textSize="24sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/phoneview"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:stepSize="0.5" />
</RelativeLayout>